<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityInfoDriver"
    android:background="@color/background">


    <!--Toolbar-->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/seed">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ToolbarIcons"
            app:title="@string/aboutDriver"
            app:titleTextColor="@color/white">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <!--LL Container-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!--LL Image and Driver's Name-->
        <LinearLayout
            android:gravity="center"
            android:id="@+id/llContImageName"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--IV Picture Driver-->
            <ImageView
                android:layout_marginStart="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/baseline_account_circle_24"/>

            <!--CV Name Driver-->
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--LL Container-->
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--TV Name Static-->
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/DriverNameS"
                        android:textSize="@dimen/text_h"/>

                    <!--TV Name-->
                    <TextView
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/DirverName"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <!--CV Phone Number-->
      <androidx.cardview.widget.CardView
          android:id="@+id/cvPhoneNumber"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginStart="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <!--LL Container-->
          <LinearLayout
              android:orientation="horizontal"
              android:padding="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <!--TV Phone NumberS-->
              <TextView
                  android:textStyle="bold"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/text_h"
                  android:text="@string/phoneNumberS"/>

              <!--TV Phone Number-->
              <TextView
                  android:id="@+id/tvPhoneDriver"
                  android:layout_marginStart="10dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/phoneNumber"
                  android:textSize="16sp"/>

          </LinearLayout>




      </androidx.cardview.widget.CardView>



        <!--CV Price-->
        <androidx.cardview.widget.CardView
            android:id="@+id/Price"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--LL Container-->
            <LinearLayout
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--TV PriceS-->
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_h"
                    android:text="@string/priceKmS"/>

                <!--TV Price-->
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/priceKm"
                    android:textSize="16sp"/>

                <!--TV KM-->
                <TextView
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/x_KM"/>

            </LinearLayout>




        </androidx.cardview.widget.CardView>



        <!--CV Car Type-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvCarType"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--LL Container-->
            <LinearLayout
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--TV CarTypeS-->
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_h"
                    android:text="@string/carTypeS"/>

                <!--TV Car Type-->
                <TextView
                    android:id="@+id/tvCarType"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carType"
                    android:textSize="16sp"/>

            </LinearLayout>




        </androidx.cardview.widget.CardView>







    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>