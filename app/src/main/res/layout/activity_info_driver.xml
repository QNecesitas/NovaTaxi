<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityInfoDriver">


    <!--Toolbar-->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/colorPrimary">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ToolbarIcons"
            app:title="@string/sobreConductor"
            app:titleTextColor="?attr/colorOnPrimary">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <!--LL Container-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!--LL Image and Driver's Name-->
        <LinearLayout
            android:gravity="center"
            android:id="@+id/llContImageName"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--cv_image-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:translationZ="4dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="@dimen/card_my_elevation">

                <!--IV Picture Driver-->
                <ImageView
                    android:background="?attr/colorPrimary"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/baseline_drive_eta_24"
                    android:contentDescription="@string/foto_del_conductor" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>



            <!--CV Name Driver-->
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--LL Container-->
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorSurface"
                    android:translationZ="12dp">

                    <!--TV Name Static-->
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/NombreCondS"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:textSize="@dimen/text_h"/>

                    <!--TV Name-->
                    <TextView
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:id="@+id/tvName"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Nombre"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <!--CV Phone Number-->
      <androidx.cardview.widget.CardView
          android:id="@+id/cvPhoneNumber"
          android:layout_marginEnd="10dp"
          android:layout_marginStart="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <!--LL Container-->
          <LinearLayout
              android:orientation="horizontal"
              android:padding="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?attr/colorSurface"
              android:translationZ="12dp">

              <!--TV Phone NumberS-->
              <TextView
                  android:textStyle="bold"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="?attr/colorOnPrimaryContainer"
                  android:textSize="@dimen/text_h"
                  android:text="@string/telefonoS"/>

              <!--TV Phone Number-->
              <TextView
                  android:textColor="?attr/colorOnPrimaryContainer"
                  android:id="@+id/tvPhoneDriver"
                  android:layout_marginStart="10dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/telefono"
                  android:textSize="16sp"/>

          </LinearLayout>




      </androidx.cardview.widget.CardView>



        <!--CV Price-->
        <androidx.cardview.widget.CardView
            android:id="@+id/Price"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--LL Container-->
            <LinearLayout
                android:background="?attr/colorSurface"
                android:translationZ="12dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--TV PriceS-->
                <TextView
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_h"
                    android:text="@string/precioKmS"/>

                <!--TV Price-->
                <TextView
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:id="@+id/tvPrice"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/precioKm"
                    android:textSize="16sp"/>

                <!--TV KM-->
                <TextView
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/por_KM"/>

            </LinearLayout>




        </androidx.cardview.widget.CardView>



        <!--CV Car Type-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvCarType"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--LL Container-->
            <LinearLayout
                android:background="?attr/colorSurface"
                android:translationZ="12dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--TV CarTypeS-->
                <TextView
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_h"
                    android:text="@string/tipoCarS"/>

                <!--TV Car Type-->
                <TextView
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:id="@+id/tvCarType"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tipoCar"
                    android:textSize="16sp"/>

            </LinearLayout>




        </androidx.cardview.widget.CardView>


        <!--CV Cant Seats-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvCantSeat"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--LL Container-->
            <LinearLayout
                android:background="?attr/colorSurface"
                android:translationZ="12dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--TV CantSeat-->
                <TextView
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_h"
                    android:text="@string/cantSeatS"/>

                <!--TV Cant Seats-->
                <TextView
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:id="@+id/tvCantSeat"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cantSeat"
                    android:textSize="16sp"/>

            </LinearLayout>




        </androidx.cardview.widget.CardView>




    </LinearLayout>

    <!--Progress-->
    <ProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/buildings"
        android:alpha="0.2"
        android:importantForAccessibility="no" />



</androidx.constraintlayout.widget.ConstraintLayout>